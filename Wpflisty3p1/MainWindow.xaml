<Window x:Class="Wpflisty3p1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpflisty3p1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl 
        BorderBrush="Brown"
        BorderThickness="2"
        TabStripPlacement="Top"
        SelectedIndex="1"
        >
        <TabItem >
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="10"
                               Height="14"
                               Fill="CadetBlue"/>
                    <Label>ItemControl</Label>
                </StackPanel>
            </TabItem.Header>
            <StackPanel>
                <ItemsControl>
                    <Label>tekst 1</Label>
                    <Label>tekst 2</Label>
                    <Label>tekst 3</Label>
                </ItemsControl>
                <Separator/>
                <ItemsControl ItemsSource="{Binding Slowa}"/>
                <Separator/>
                <ItemsControl ItemsSource="{Binding Produkty}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{Binding Nazwa}"/>
                                <Label Content="{Binding Cena}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
           
                </StackPanel>
        </TabItem>
        <TabItem Header="ListBox">
            <StackPanel>
            <ListBox ItemsSource="{Binding Slowa}">
                
            </ListBox>

                <Separator/>
                <ListBox ItemsSource="{Binding Produkty}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{Binding Nazwa}"/>
                                <Label Content="{Binding Cena}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    
                </ListBox>


            </StackPanel>
        </TabItem>
        <TabItem Header="ListView">
            <StackPanel>

                <ListView ItemsSource="{Binding Slowa}"></ListView>
                <ListView ItemsSource="{Binding Produkty}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Header="nazwa produktu"
                                DisplayMemberBinding="{Binding Nazwa}"/>
                            <GridViewColumn
                                Header="cena produktu [zł]"
                                DisplayMemberBinding="{Binding Cena}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </TabItem>
        <TabItem Header="DataGrid">
            <DataGrid
                CanUserDeleteRows="False"
                CanUserSortColumns="False"
                RowBackground="BlueViolet"
                AlternationCount="3"
                AlternatingRowBackground="AliceBlue"
                IsReadOnly="False"
                ItemsSource="{Binding Produkty}">
                
            </DataGrid>
            
        </TabItem>
    </TabControl>
</Window>
